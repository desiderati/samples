<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>br.tech.desiderati.common</groupId>
        <artifactId>common-parent-info</artifactId>
        <version>1.2.0-SNAPSHOT</version>
        <relativePath>../../commons/common-parent-info</relativePath>
    </parent>
    <groupId>br.tech.desiderati.sample</groupId>
    <artifactId>sample-static</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <!-- NPM Default Environment. -->
        <node.version>v6.9.0</node.version>
        <npm.version>3.10.8</npm.version>

        <npm.build-environment>build</npm.build-environment>
        <npm.dist-dir>dist</npm.dist-dir>

        <distro.filename>${project.build.finalName}.tar.gz</distro.filename>
    </properties>

    <build>
        <plugins>
            <!--
                It cleans the static output directory.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>clean-static-output-directory</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${npm.dist-dir}</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--
                A Maven plugin that downloads/installs Node and NPM locally, runs NPM install.
            -->
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <!--
                    Não alterar a versão, caso contrário acontecerá um erro
                    durante a execução do Gulp.js.
                -->
                <version>1.0</version>
                <configuration>
                    <installDirectory>node_config</installDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>install-node-and-npm</id>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <nodeVersion>${node.version}</nodeVersion>
                            <npmVersion>${npm.version}</npmVersion>
                        </configuration>
                    </execution>
                    <execution>
                        <id>run-npm-install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>run-npm-build</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <arguments>run ${npm.build-environment}</arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--
                It assembles the dist directory.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>assemble-static-content-to-dev</id>
            <properties>
                <!-- NPM Default Environment. -->
                <npm.build-environment>build:dev</npm.build-environment>
            </properties>
        </profile>
        <profile>
            <id>assemble-static-content-to-qa</id>
            <properties>
                <!-- NPM Default Environment. -->
                <npm.build-environment>build:qa</npm.build-environment>
            </properties>
        </profile>
        <profile>
            <id>assemble-static-content-to-prod</id>
            <properties>
                <!-- NPM Default Environment. -->
                <npm.build-environment>build:prod</npm.build-environment>
            </properties>
        </profile>
    </profiles>

</project>
